@page
@model LoginModel

@{
    ViewData["Title"] = "Ingresar";
}

<div class="row">
    <div class="col-12">

        <section class="dvh-100">
            <div class="container py-5 dh-100">
                <div class="row d-flex align-items-center justify-content-center dh-100">
                    <div class="col-md-8 col-lg-7 col-xl-6">
                        <img src="/logo.png"
                             class="img-fluid">
                    </div>
                    <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <!-- Email input -->
                            <div data-mdb-input-init class="form-outline mb-4">
                                <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="tuusuario@mp.com" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <!-- Password input -->
                            <div data-mdb-input-init class="form-outline mb-4">
                                <input asp-for="Input.Password" type="password" class="form-control form-control-lg" autocomplete="current-password" aria-required="true" placeholder="contraseña" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="d-flex mb-4">
                                <!-- Checkbox -->
                                <div class="form-check">
                                    <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox"/>
                                    <label asp-for="Input.RememberMe" class="form-check-label"> Recordarme en este dispositivo </label>
                                </div>
                            </div>

                            <!-- Submit button -->
                            <button type="submit" class="w-100 btn btn-lg btn-primary">Ingresar</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>  
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
