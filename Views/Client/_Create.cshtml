@model Client

<form asp-action="Create" id="createClientForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span id="nameFormatted" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label"></label>
        <input asp-for="Surname" class="form-control" />
        <span id="surnameFormatted" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cuit" class="control-label"></label>
        <input asp-for="Cuit" class="form-control" />
        <span id="cuitFormatted" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CompanyName" class="control-label"></label>
        <input asp-for="CompanyName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span id="emailFormatted" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Telephone" class="control-label"></label>
        <input asp-for="Telephone" class="form-control" />
        <span asp-validation-for="Telephone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClientTypeId" class="control-label">Tipo Cliente</label>
        <select asp-for="ClientTypeId" class="form-select" asp-items="ViewBag.ClientTypes"></select>
        <span asp-validation-for="ClientTypeId" class="text-danger"></span>
    </div>

    <div class="modal-footer form-group">
        <input type="submit" value="Ingresar" class="btn btn-primary" />
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}