@model IEnumerable<CurrentAccounts>
@{
    ViewData["Title"] = "Cuentas Corrientes";
    Layout = "_Layout";
    var sortOrder = Context.Request.Query["sortOrder"].ToString();
    Func<string, string> sortLink = col =>
        Url.Action("Index", new { sortOrder = sortOrder == col ? col + "_desc" : col }) ?? string.Empty;
}

@if (User.IsInRole("SuperUser"))
{
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#CreateCurrentAccountModal">
        <i class="bi bi-plus-circle"></i> Nueva Cuenta Corriente
    </button>
}

<!-- Modal para crear cuenta corriente -->
<div class="modal fade" id="CreateCurrentAccountModal" tabindex="-1" aria-labelledby="CreateCurrentAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="CreateCurrentAccountModalLabel">Nueva Cuenta Corriente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("_Create", new CurrentAccounts())
            </div>
        </div>
    </div>
</div>

<!-- Modal para editar cuenta corriente -->
<div class="modal fade" id="editCurrentAccountModal" tabindex="-1" aria-labelledby="editCurrentAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editCurrentAccountModalLabel"><i class="bi bi-pencil-square me-1"></i> Editar Cuenta Corriente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <!-- El contenido se carga dinámicamente -->
            </div>
        </div>
    </div>
</div>

<div class="table-responsive" id="currentAccountTableContainer">
    @await Html.PartialAsync("_CurrentAccountTable", Model)
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/CurrentAccount.js"></script>
}

